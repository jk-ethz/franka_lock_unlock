<launch>
    <arg name="hostname"/>
    <arg name="username" default="admin"/>
    <arg name="password"/>

    <node name="franka_lock_unlock"
          pkg="franka_lock_unlock"
          exec="franka_lock_unlock.py"
          output="screen"
          args="$(var hostname) $(var username) $(var password) -u -l -w -r -p -c"
    />
</launch>
