<?xml version="1.0" ?>

<launch>
    <arg name="hostname"/>
    <arg name="username" default="admin"/>
    <arg name="password"/>

    <node name="franka_shutdown"
          pkg="franka_lock_unlock"
          type="shutdown"
          output="screen"
          args="$(arg hostname) $(arg username) $(arg password) -w -r"
    />
</launch>
